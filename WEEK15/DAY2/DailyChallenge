// Prompt the user for words separated by commas
let input = prompt("Enter several words, separated by commas:");

// Convert the input into an array of words, trimming extra spaces
let words = input.split(",").map(word => word.trim());

// Find the length of the longest word
let maxLength = 0;
for (let word of words) {
    if (word.length > maxLength) {
        maxLength = word.length;
    }
}

// Create the top and bottom border
let border = "*".repeat(maxLength + 4); // 2 stars + 2 spaces

console.log(border);

// Print each word with padding and stars
for (let word of words) {
    let padding = " ".repeat(maxLength - word.length);
    console.log(`* ${word}${padding} *`);
}

console.log(border);
